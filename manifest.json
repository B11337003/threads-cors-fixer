{
  "manifest_version": 3,
  "name": "Threads CORS Fixer",
  "version": "1.4",
  "permissions": [
    "declarativeNetRequest", 
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*.threads.net/*",
    "*://*.threads.com/*",
    "*://*.instagram.com/*",
    "*://*.cdninstagram.com/*",
    "*://*.fbcdn.net/*",
    "*://*.facebook.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}