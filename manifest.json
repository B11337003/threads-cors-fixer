{
  "manifest_version": 3,
  "name": "Threads CORS Fixer (By Gemini)",
  "version": "1.0",
  "description": "修復 Threads 網頁版因為 CORS 設定錯誤導致的破圖問題。",
  "permissions": [
    "declarativeNetRequest", 
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*.threads.net/*",
    "*://*.fbcdn.net/*",
    "*://*.cdninstagram.com/*",
    "*://*.facebook.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}